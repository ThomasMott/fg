<section id="main">
	<div class="grid">
		<div class="categories">
		<span>&middot;</span>
		<a href="/"
		{% if page.url == "/" %}
			aria-current="page"
		{% endif %}
		>all</a>
		<span>&middot;</span>
		{% for tag in collections.tagsList %}
			{% if tag !== 'post' %}
				<a href="/tags/{{tag}}/"
				{% if tag in page.url %}
					aria-current="page"
				{% endif %}
				>{{tag}}</a> <span>&middot;</span>
			{% endif %}
		{% endfor %}
		</div>
	</div>
</section>
