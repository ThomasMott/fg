<section class="bg">
	<div class="grid">
		<div class="row blog-card archives">
		{% for post in posts %}
			<article class="cards archive">
				<a href="/posts/{{ post.data.name }}" title="{{ post.data.title }}">
					<div class="card-img">
						<img src="{{ post.data.image }}">
					</div>
					<div class="card-txt">
						<div class="main-txt">
							<p class="s">{{ post.data.date | postDate }}</p>
							<h3><span>{{ post.data.title }}</span></h3>
						</div>
					</div>
				</a>
			</article>
		{% endfor %}
		</div>
	</div>
</section>
