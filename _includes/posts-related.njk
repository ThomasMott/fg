<section class="bg">
	<div class="grid">
		<div class="row blog-card related">
		{% for post in posts %}
			<article class="cards">
					<a href="/posts/{{ post.data.name }}" title="{{ post.data.title }}">
						<div class="card-txt">
							<div class="main-txt">
								<p class="s">{{ post.data.date | postDate }} <span>&middot;</span> {{ post.data.time }}</p>
								<h3><span>{{ post.data.title }}</span></h3>
								<p class="d">{{ post.data.tldr }}</p>
								<ul class="cat">
									{% for tag in post.data.tags %}
										{% if tag !== 'post' %}
											<li>{{ tag }}</li>
										{% endif %}
									{% endfor %}
								</ul>
							</div>
						</div>
					</a>
				</article>
		{% endfor %}
   		</div>
  	</div>
</section>
