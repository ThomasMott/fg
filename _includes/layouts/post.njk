---
layout: layouts/base.njk
js: read
---

<section>
	<div class="grid">
		<p class="bc"><a href="/">Devlog</a> â€º {{ name }}</p>
		<h1 class="title">{{ title }}</h1>
		<p class="top">TLDR: <em>{{ tldr }}</em></p>
		<p class="top"><em>{{ time }}</em></p>
		<ul class="ul-s">
			{% for tag in tags %}
				{% if tag !== 'post' %}
					<li>{{ tag }}</li>
				{% endif %}
			{% endfor %}
		</ul>
	</div>
</section>
<section>
	<div class="soc-float">
		<a href="https://twitter.com/share?url=https://foxgibbon.com/post/{{ name }}"><img src="/static/images/twitter.svg"></a>
	</div>
	<div class="grid">
		<article class="case">
			{{ content | safe }}
		</article>
	</div>
</section>
<div id="reading-progress"><div id="reading-progress-fill"></div></div>
{% set posts = collections[tags[1]] | related(page.url) %}
{% include "posts-related.njk" %}
