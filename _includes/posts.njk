<section>
	<div class="grid">
		<div class="row blog-card">
		{% for post in posts %}
		{% if posts[0].data.title == post.data.title %}
		<div class="col-12-xs col-12-sm col-12-md col-9 main">
			<article class="cards">
				<a href="/posts/{{ post.data.name }}">
					<ul class="cat">
						{% for tag in post.data.tags %}
							{% if tag !== 'post' %}
								<li>{{ tag }}</li>
							{% endif %}
						{% endfor %}
					</ul>
					<div class="card-img">
						<img src="{{ post.data.image }}">
					</div>
					<div class="card-txt">
						<div class="main-txt">
							<p class="s">{{ post.data.date | postDate }} · {{ post.data.time }}</p>
							<h3>{{ post.data.title }}</h3>
							<p class="d">{{ post.data.tldr }}</p>
						</div>
					</div>
				</a>
			</article>
		</div>
		{% endif %}
		{% if posts[0].data.title !== post.data.title %}
			<div class="col-12-xs col-6-sm col-4-md col-3">
				<article class="cards">
					<a href="/posts/{{ post.data.name }}">
						<ul class="cat">
							{% for tag in post.data.tags %}
								{% if tag !== 'post' %}
									<li>{{ tag }}</li>
								{% endif %}
							{% endfor %}
						</ul>
						<div class="card-img">
							<img src="{{ post.data.image }}">
						</div>
						<div class="card-txt">
							<div class="main-txt">
								<p class="s">{{ post.data.date | postDate }} · {{ post.data.time }}</p>
								<h3>{{ post.data.title }}</h3>
								<p class="d">{{ post.data.tldr }}</p>
							</div>
						</div>
					</a>
				</article>
			</div>
		{% endif %}
		{% endfor %}
   		</div>
		<div class="pagination:container">
			{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}"><div class="pagination:number arrow"><span>&#8249;</span></div></a>
			{% else %}<div class="pagination:number arrow disabled"><span>&#8249;</span></div>
			{% endif %}
			{%- for pageEntry in pagination.pages %}
				<a href="{{ pagination.hrefs[ loop.index0 ] }}"{% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page"{% endif %}><div class="pagination:number">
					{{ loop.index }}
				</div></a>
			{%- endfor %}
			{% if pagination.href.next %}<a href="{{ pagination.href.next }}"><div class="pagination:number arrow"><span>&#8250;</span></div></a>
			{% else %}<div class="pagination:number arrow disabled"><span>&#8250;</span></div>
			{% endif %}
		</div>
  	</div>
</section>
