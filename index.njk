---
title: Homepage
description: Browse homepage
layout: layouts/base.njk
js: filter.js
---

<section id="main">
	<div class="grid">
		<p>Devlog</p>
		<h1 class="title">Game On.</h1>
		<p class="top">All of my devlogs are below, click the buttons to filter by category.</p>
		<br>
		<div id="myBtnContainer">
			<button class="btn active" onclick="filterSelection('all')">All posts</button>
			<button class="btn" onclick="filterSelection('ui')">Unity</button>
			<button class="btn" onclick="filterSelection('ux')">UX design</button>
			<button class="btn" onclick="filterSelection('de')">Development</button>
			<button class="btn" onclick="filterSelection('gd')">Graphic design</button>
			<button class="btn" onclick="filterSelection('ot')">Other</button>
		</div>
	</div>
</section>
<section>
	<div class="grid">
		<div class="row blog-card">
			{% for post in collections.post | reverse %}
				{% if loop.index0 < 3 %}
				<div class="col-12-xs col-12-sm col-6-md col-4 fd gd">
					<article class="cards">
						<a href="{{ post.url }}">
							<ul class="cat">
								{% for tag in post.data.tags %}
									<li>{{ tag }}</li>
								{% endfor %}
							</ul>
							<div class="card-img">
								<img src="https://images.unsplash.com/photo-1506792006437-256b665541e2?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80">
							</div>
							<div class="card-txt">
								<div class="main-txt">
									<p class="s">{{ post.data.date }}</p>
									<h3>{{ post.data.title }}</h3>
									<p class="d">{{ post.data.description }}</p>
								</div>
							</div>
						</a>
					</article>
				</div>
				{% endif %}
			{% endfor %}
   		</div>
  	</div>
</section>
<div class="fox"><img src="/static/images/fox.svg"></div>
<div class="gibbon"><img src="/static/images/gibbon.svg"></div>
